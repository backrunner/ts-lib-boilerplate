{
  "name": "ts-lib-boilerplate",
  "version": "1.2.0",
  "description": "Typescript library boilerplate",
  "main": "dist/lib.umd.js",
  "module": "dist/lib.esm.js",
  "typings": "dist/types/main.d.ts",
  "keywords": [
    "boilerplate",
    "typescript",
    "lib"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "cross-env NODE_ENV=dev rollup -c rollup.config.ts -w",
    "build": "rimraf ./dist && tsc --module commonjs && cross-env NODE_ENV=production rollup -c rollup.config.ts && rimraf ./dist/lib",
    "lint": "eslint ./src/**/*"
  },
  "author": "BackRunner",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.3",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@types/node": "^18.17.4",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-alloy": "^5.1.1",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "rollup": "^2.79.1",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.35.0",
    "tslib": "^2.6.1",
    "typescript": "^5.1.6"
  }
}
