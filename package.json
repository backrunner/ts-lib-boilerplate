{
  "name": "ts-lib-boilerplate",
  "type": "module",
  "version": "3.0.0",
  "description": "Typescript library boilerplate",
  "author": "BackRunner",
  "license": "MIT",
  "keywords": [
    "boilerplate",
    "typescript",
    "lib"
  ],
  "main": "dist/lib.umd.js",
  "module": "dist/lib.esm.js",
  "typings": "dist/types/main.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "cross-env NODE_ENV=dev rollup -c rollup.config.ts --configPlugin typescript -w",
    "build": "rimraf ./dist && tsc && cross-env NODE_ENV=production rollup -c rollup.config.ts --configPlugin typescript && rimraf ./dist/lib",
    "lint": "eslint ./src/**/*",
    "lint:fix": "eslint ./src/**/* --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.19.0",
    "@rollup/plugin-commonjs": "^26.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^24.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.45.1",
    "rollup-plugin-filesize": "^10.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  }
}
